@model List<Category>

@{
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary ">
                Category List
            </h2>
        </div>
        <div class="col-6 pb-3 text-end">
            <a asp-controller="" asp-action="" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (Category category in Model.OrderBy(category => category.DisplayOrder))
    {
        <tr>
            <td>
                @category.Name
            </td>
            <td>
                @category.DisplayOrder
            </td>
        </tr>
    }
    </tbody>
</table>



<table>
